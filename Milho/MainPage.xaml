<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Milho.MainPage"
             Shell.NavBarIsVisible="False">


    <StackLayout Padding="20">

    <Image  Source="milho.png"
            Aspect="AspectFill"
            Grid.RowSpan="2"/>

    <Label x:Name="PerguntaLabel"
               Text="Pergunta aparecerá aqui"
               FontSize="24"
               HorizontalOptions="Center" />
        
        <RadioButton x:Name="RespostaA"
                     Content="Resposta A"
                     GroupName="Respostas" />

        <RadioButton x:Name="RespostaB"
                     Content="Resposta B"
                     GroupName="Respostas" />

        <RadioButton x:Name="RespostaC"
                     Content="Resposta C"
                     GroupName="Respostas" />
                     
        <RadioButton x:Name="RespostaD"
                     Content="Resposta D"
                     GroupName="Respostas" />
        
        <Button Text="Enviar Resposta"
                Clicked="OnEnviarRespostaClicked" />
        
        <Label x:Name="PontuacaoLabel"
               Text="Pontuação: 0"
               FontSize="18"
               HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>

